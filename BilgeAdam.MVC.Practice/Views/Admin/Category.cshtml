@{
    ViewData["title"] = "Ürün Yönetim Paneli";
    Layout = "_AdminLayout";
}
@model CategoryAddDto
<div class="row">
    <div class="col-4">
        <form asp-action="CreateCategory" method="post">
    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
    <div class="form-group">
        <label for="Name">Ürün Adı</label>
        <input type="text" id="Name" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <label for="Description">Ürün Açıklama</label>
        <input type="text" id="Description" class="form-control" asp-for="Description" />
    </div>
    <button class="btn btn-primary float-end mt-3 w-25" type="submit">Kaydet</button>
</form>
    </div>
    <div class="col-8">

          @await Component.InvokeAsync("Category")
    </div>
</div>


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
 } @*partial ile cshtml i inject ettik*@
}

