@{
    ViewData["Title"] = @ViewBag.title;
}
@model List<ProductViewDto>
<div class="row">
    <h2 class="text-warning">@ViewBag.title</h2>
    @foreach (var product in @Model)
    {
        <div class="col-md-4 col-sm-6">
            <div class="card mt-4">
                <div class="image-container">
                    <div class="first">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="discount">-25%</span>
                            <span class="wishlist"><i class="fa fa-heart-o"></i></span>
                        </div>
                    </div>
                    @*href="/Home/Detail/@product.Id"*@
                    <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id">
                        <img src="./images/@(product.Id).jpg" class="img-fluid rounded thumbnail-image">
                    </a>
                </div>
                <div class="product-detail-container p-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="dress-name">@product.Name</h5>
                        <div class="d-flex flex-column mb-2">
                            <span class="new-price">$@decimal.Round(product.Price, 2)</span>
                            <small class="old-price text-right">$@(decimal.Round(product.Price, 2)+5.99M)</small>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center pt-1">
                        <div class="color-select d-flex ">
                            <input type="button" name="grey" class="btn creme">
                            <input type="button" name="red" class="btn red ml-2">
                            <input type="button" name="blue" class="btn blue ml-2">
                        </div>
                        <div class="d-flex ">
                            <span class="item-size mr-2 btn" type="button">S</span>
                            <span class="item-size mr-2 btn" type="button">M</span>
                            <span class="item-size btn" type="button">L</span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center pt-1">
                        <div>
                            <i class="fa fa-star-o rating-star"></i>
                            <span class="rating-number">4.8</span>
                        </div>
                        <span class="buy">Stock: @product.Stock</span>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
@section Styles{
<Link rel="stylesheet" href="~/css/product.css" />
}
@section Scripts{
<script>
</script>
}