@model List<Product>

<div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Türü</th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.ProductName</td>
                    <td>@p.CategoryID</td>
                    <td>@p.UnitPrice</td>
                    <td>@p.UnitsInStock</td>
                    <td>
                        <a class="btn btn-primary float-end mt-3 w-10" asp-controller="Admin" asp-action="Delete" asp-route-id =@p.ProductID>Sil</a> 

                     
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
