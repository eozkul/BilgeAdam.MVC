@model List<Customer>

<div>
    <ul>
        @foreach (var customer in @Model)
        {
            <div class="accordion accordion-flush" id="accordionFlushExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button href="@Url.Action("Admin", "Customer", @customer)" class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            @customer.CompanyName
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                        <div class="accordion-body">

                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Şirket Adı</th>
                                        <th>Yetkili Adı
                                        <th>Adres</th>
                                        <th>Phone</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <td>@customer.CompanyName</td>
                                        <td>@customer.ContactName</td>
                                        <td>@customer.Address</td>
                                        <td>@customer.Phone</td>
                                         <td>
                        <a class="btn btn-primary float-end mt-3 w-10" asp-controller="Admin" asp-action="DeleteCustomer" asp-route-id =@customer.CustomerID>Sil</a> 

                     
                    </td>
                                    </tr>

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>


        }
    </ul>

</div>
